{% render 'partials/head.liquid' %}

    <div id="playlist">
        {% cycle "{{ playlists }}"  %} 
            <img src="https://fdnd-agency.directus.app/assets//{{ playlist.image }}">
            <p>{{ playlist.title }}</p>

    <div>
        <form action="/views/index.liquid" method="post">
            <label> Nieuwe playlist
                <input type="checkbox" name="voeg-playlist-toe">
                <input type="submit" name="voeg-playlist-toe">
            </label>
        </form>
    </div>

    <div id="stories">
        <h2>All Stories</h2>
        {%for story in stories%}
            <img src="https://fdnd-agency.directus.app/assets//{{ story.image }}">
            <p>{{ story.title }}</p>
        {% endfor %}
    </div>

    <div id="playlist">
        <h2>Suggested Playlists</h2>
        {%for playlist in playlists %}  
           
            <h3>{{ playlist.title }}</h3>
                <img src="https://fdnd-agency.directus.app/assets/{{ playlist.image }}">
                <form action="/delete/{{ playlist.id }}" method="POST">
            
                <button type="submit" name="delete">Verwijder Playlist</button>
                </form>
                    

            </form>
        {% endfor %}
    </div>